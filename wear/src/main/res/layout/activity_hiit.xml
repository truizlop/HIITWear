<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hiit_background"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/round_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_round_rect"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/round_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Round 1"
                    android:textAllCaps="true"
                    android:textSize="10sp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="20"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/exercise_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_color"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center_horizontal"
                android:text="Current exercise"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/exercise_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center_horizontal"
                android:text="Mountain Climber"
                android:textSize="16sp"
                android:textAllCaps="true"
                />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/icon_frame"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/red_circle"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_exercises"
            android:layout_gravity="center"/>
    </FrameLayout>
</android.support.wearable.view.BoxInsetLayout>